<%= render partial: "shared/error_list" %>


<%=form_for @user do |f|%>
<%=f.label :name%>
<%=f.text_field :name%>
<h4>Check all allergies that apply:</h4>
    <% Ingredient.all.each do |ingredient| %>
        <div>
            <%=label_tag 'user[ingredient_ids][]', ingredient.name %>
            <%=check_box_tag 'user[ingredient_ids][]', ingredient.id %>
        </div>   
    <%end%>
<%=f.submit%>
<%end%>